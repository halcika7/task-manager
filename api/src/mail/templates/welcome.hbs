<html>
  <head>
    <meta charset='utf-8' />
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #4f46e5;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px 8px 0 0;
      }
      .content {
        padding: 20px;
        background-color: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 0 0 8px 8px;
      }
      .button {
        display: inline-block;
        padding: 12px 24px;
        background-color: #4f46e5;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        margin-top: 20px;
      }
      .features {
        margin: 20px 0;
        padding: 0;
        list-style-type: none;
      }
      .features li {
        margin: 10px 0;
        padding-left: 24px;
        position: relative;
      }
      .features li:before {
        content: 'âœ“';
        position: absolute;
        left: 0;
        color: #4f46e5;
      }
      .footer {
        margin-top: 20px;
        text-align: center;
        color: #6b7280;
        font-size: 14px;
      }
      .password-notice {
        background-color: #fee2e2;
        border: 1px solid #fecaca;
        border-radius: 6px;
        padding: 12px;
        margin: 20px 0;
        color: #991b1b;
      }

      .password-box {
        background-color: #f3f4f6;
        border: 1px solid #e5e7eb;
        border-radius: 4px;
        padding: 8px 12px;
        margin: 8px 0;
        font-family: monospace;
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <div class='header'>
      <h1>{{t.welcomeHeader}}</h1>
    </div>

    <div class='content'>
      <p>{{t.greeting}} {{name}},</p>

      {{#if password}}
        <div class='password-notice'>
          <p><strong>{{t.important}}</strong> {{t.temporaryPasswordNotice}}</p>
          <div class='password-box'>{{password}}</div>
          <p>{{t.passwordChangeNotice}}</p>
        </div>
      {{/if}}

      <p>{{t.welcomeMessage}}</p>

      <ul class='features'>
        <li>{{t.features.createTasks}}</li>
        <li>{{t.features.setDueDates}}</li>
        <li>{{t.features.collaborate}}</li>
        <li>{{t.features.trackProgress}}</li>
        <li>{{t.features.organize}}</li>
      </ul>

      <p>{{#if
          password
        }}{{t.getStartedWithPassword}}{{else}}{{t.getStarted}}{{/if}}</p>

      <a
        href='{{appUrl}}/{{locale}}/dashboard'
        class='button'
      >{{t.createTaskButton}}</a>

      <p>{{t.supportMessage}}</p>
    </div>

    <div class='footer'>
      <p>{{t.footerText}}</p>
    </div>
  </body>
</html>
